@{
    string controller = (string)base.ViewContext.RouteData.Values["controller"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@controller - Retaguarda</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

    <environment names="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/lib/metisMenu/dist/metisMenu.css" rel="stylesheet" />
        <link href="~/css/animate.css" rel="stylesheet" />
        <link href="~/lib/datatables.net-dt/css/jquery.dataTables.css" rel="stylesheet" />
        <link href="~/lib/toastr/toastr.css" rel="stylesheet" />
        <link href="~/lib/jquery-confirm2/css/jquery-confirm.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
        <link href="~/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />
        <link href="~/lib/select2/dist/css/select2.css" rel="stylesheet" />
        <link href="~/css/style.css" asp-append-version="true" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/lib/metisMenu/dist/metisMenu.min.css" rel="stylesheet" />
        <link href="~/css/animate.css" rel="stylesheet" />
        <link href="~/lib/datatables.net-dt/css/jquery.dataTables.css" rel="stylesheet" />
        <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
        <link href="~/lib/jquery-confirm2/css/jquery-confirm.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
        <link href="~/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />
        <link href="~/lib/select2/dist/css/select2.css" rel="stylesheet" />
        <link href="~/css/style.css" asp-append-version="true" rel="stylesheet" />
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body class="skin-3">

    <!-- Wrapper-->
    <div id="wrapper" class="@Html.PageClass()">

        <!-- Navigation -->
        @Html.Partial("_Navigation")

        <!-- Page wraper -->
        <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">

            <!-- Top Navbar -->
            @Html.Partial("_TopNavbar")

            <!-- Breadcrumb -->
            @Html.Partial("_Breadcrumb")

            <!-- Main view  -->
            @RenderBody()

            <!-- Footer -->
            @Html.Partial("_Footer")

        </div>
        <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/metisMenu/dist/metisMenu.js"></script>
        <script src="~/lib/slimScroll/jquery.slimscroll.js"></script>
        <script src="~/lib/datatables.net/js/jquery.dataTables.js"></script>
        <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.js"></script>
        <script src="~/lib/datatables.net-buttons/js/dataTables.buttons.js"></script>
        <script src="~/lib/datatables.net-buttons-bs/js/buttons.bootstrap.js"></script>
        <script src="~/lib/pdfmake/build/pdfmake.js"></script>
        <script src="~/lib/pdfmake/build/vfs_fonts.js"></script>
        <script src="~/lib/jszip/dist/jszip.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.colVis.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.flash.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.html5.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.print.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery.blockui/jquery.blockUI.js"></script>
        <script src="~/lib/jquery-confirm2/js/jquery-confirm.js"></script>
        <script src="~/lib/jquery-form/src/jquery.form.js"></script>
        <script src="~/lib/toastr/toastr.js"></script>
        <script src="~/lib/jquery-mask-plugin/dist/jquery.mask.js"></script>
        <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
        <script src="~/lib/bootstrap-datepicker/dist/locales/bootstrap-datepicker.pt-BR.min.js"></script>
        <script src="~/lib/select2/dist/js/select2.js"></script>

        <!--framework-->
        <script src="~/js/framework/fw-blockui.js"></script>
        <script src="~/js/framework/fw-form.js"></script>
        <script src="~/js/framework/fw-alert.js"></script>
        <script src="~/js/framework/fw-delete-item.js"></script>
        <script src="~/js/framework/fw-modal.js"></script>
        <script src="~/js/framework/fw-load-by-field.js"></script>

        <script src="~/js/script.js"></script>
        <script src="~/lib/pace/pace.js"></script>
        <script src="~/js/site.js"></script>

    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/metisMenu/dist/metisMenu.js"></script>
        <script src="~/lib/slimScroll/jquery.slimscroll.js"></script>
        <script src="~/lib/datatables.net/js/jquery.dataTables.js"></script>
        <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.js"></script>
        <script src="~/lib/datatables.net-buttons/js/dataTables.buttons.js"></script>
        <script src="~/lib/datatables.net-buttons-bs/js/buttons.bootstrap.js"></script>
        <script src="~/lib/pdfmake/build/pdfmake.js"></script>
        <script src="~/lib/pdfmake/build/vfs_fonts.js"></script>
        <script src="~/lib/jszip/dist/jszip.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.colVis.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.flash.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.html5.js"></script>
        <script src="~/lib/datatables.net-buttons/js/buttons.print.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery.blockui/jquery.blockUI.js"></script>
        <script src="~/lib/jquery-confirm2/js/jquery-confirm.js"></script>
        <script src="~/lib/jquery-form/src/jquery.form.js"></script>
        <script src="~/lib/toastr/toastr.js"></script>
        <script src="~/lib/jquery-mask-plugin/dist/jquery.mask.js"></script>
        <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
        <script src="~/lib/bootstrap-datepicker/dist/locales/bootstrap-datepicker.pt-BR.min.js"></script>
        <script src="~/lib/select2/dist/js/select2.js"></script>

        <!--framework-->
        <script src="~/js/framework/fw-blockui.js"></script>
        <script src="~/js/framework/fw-form.js"></script>
        <script src="~/js/framework/fw-alert.js"></script>
        <script src="~/js/framework/fw-delete-item.js"></script>
        <script src="~/js/framework/fw-modal.js"></script>
        <script src="~/js/framework/fw-load-by-field.js"></script>

        <script src="~/js/script.js"></script>
        <script src="~/lib/pace/pace.js"></script>
        <script src="~/js/site.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
