@model ICollection<ClienteListaViewModel>

<table class="table table-striped table-bordered datatable">
    <colgroup>
        <col />
        <col width="100" />
        <col width="150" />
        <col width="150" />
        <col width="100" />
        <col width="100" />
        <col width="100" />
        <col width="120" />
    </colgroup>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cadastro</th>
            <th>Região</th>
            <th>Tipo</th>
            <th>Limite</th>
            <th>Última Compra</th>
            <th>Pontos</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td class="text-center">@item.Cadastro</td>
                <td>@item.Regiao</td>
                <td>@item.TipoCliente</td>
                <td class="text-right">@item.Limite</td>
                <td class="text-center">@item.UltimaCompra</td>
                <td class="text-right">@item.Pontos</td>
                <td class="text-center">
                    <a class="btn btn-xs btn-default" asp-action="visualizar" asp-route-id="@item.Id">
                        <i class="fa fa-fw fa-search-plus"></i>
                    </a>
                    @if (Html.TemPermissao(FuncionalidadeEnum.Cliente, AcaoEnum.Editar))
                    {
                        <a class="btn btn-xs btn-default" asp-action="editar" asp-route-id="@item.Id">
                            <i class="fa fa-fw fa-edit"></i>
                        </a>
                    }
                    @if (Html.TemPermissao(FuncionalidadeEnum.Cliente, AcaoEnum.Excluir))
                    {
                        <a class="btn btn-xs btn-default" asp-action="excluir" asp-route-id="@item.Id" data-fw-delete-item>
                            <i class="fa fa-fw fa-trash-o"></i>
                        </a>
                    }
                </td>
            </tr>
        }
                </tbody>
            </table>