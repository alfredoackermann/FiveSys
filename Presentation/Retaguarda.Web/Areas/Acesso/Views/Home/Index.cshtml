@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Retaguarda</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/toastr/toastr.css" rel="stylesheet" />

    <link href="css/animate.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div class="logo">
                <span style="color: #ff8400">FIVE</span><span style="color: #000">SYS</span>
            </div>
            <h3>Retaguarda</h3>
            @if (Html.SenhaTemporaria())
            {
                <form asp-controller="Home" asp-action="TrocarSenha" asp-area="Acesso" class="m-t" role="form" data-fw-ajax>
                    <div class="form-group">
                        <input name="SenhaAtual"
                               type="password"
                               class="form-control"
                               placeholder="Senha Atual"
                               data-val="true"
                               data-val-required="Obrigatório">
                    </div>
                    <div class="form-group">
                        <input name="NovaSenha"
                               type="password"
                               class="form-control"
                               placeholder="Nova Senha"
                               data-val="true"
                               data-val-required="Obrigatório">
                    </div>
                    <div class="form-group">
                        <input name="ConfirmacaoSenha"
                               type="password"
                               class="form-control"
                               placeholder="Repetir Nova Senha"
                               data-val="true"
                               data-val-required="Obrigatório">
                    </div>
                    <button type="submit" class="btn btn-warning block full-width m-b">Trocar Senha</button>
                </form>
            }
            else
            {
                <form asp-controller="Home" asp-action="Logar" asp-area="Acesso" class="m-t" role="form" data-fw-ajax>
                    <div class="form-group">
                        <input asp-for="Login"
                               type="text"
                               class="form-control"
                               placeholder="Login"
                               data-val="true"
                               data-val-required="Obrigatório">
                    </div>
                    <div class="form-group">
                        <input asp-for="Senha"
                               type="password"
                               class="form-control"
                               placeholder="Senha"
                               data-val="true"
                               data-val-required="Obrigatório">
                    </div>
                    <button type="submit" class="btn btn-warning block full-width m-b">Entrar</button>
                </form>
            }
        </div>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery.blockui/jquery.blockUI.js"></script>
        <script src="~/lib/jquery-form/src/jquery.form.js"></script>
        <script src="~/lib/toastr/toastr.js"></script>
        <!--framework-->
        <script src="~/js/framework/fw-blockui.js"></script>
        <script src="~/js/framework/fw-form.js"></script>
        <script src="~/js/framework/fw-alert.js"></script>
        <script src="~/js/framework/fw-delete-item.js"></script>
        <script src="~/js/framework/fw-modal.js"></script>
        <script src="~/js/framework/fw-load-by-field.js"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery.blockui/jquery.blockUI.js"></script>
        <script src="~/lib/jquery-form/src/jquery.form.js"></script>
        <script src="~/lib/toastr/toastr.js"></script>

        <!--framework-->
        <script src="~/js/framework/fw-blockui.js"></script>
        <script src="~/js/framework/fw-form.js"></script>
        <script src="~/js/framework/fw-alert.js"></script>
        <script src="~/js/framework/fw-delete-item.js"></script>
        <script src="~/js/framework/fw-modal.js"></script>
        <script src="~/js/framework/fw-load-by-field.js"></script>
    </environment>
</body>
</html>
