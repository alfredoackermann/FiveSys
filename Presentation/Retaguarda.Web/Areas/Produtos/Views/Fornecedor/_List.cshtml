@model ICollection<FornecedorListaViewModel>

<table class="table table-striped table-bordered datatable">
    <colgroup>
        <col width="20" />
        <col width="150" />
        <col width="150" />
        <col width="150" />
        <col width="80" />
    </colgroup>
    <thead>
        <tr>
            <th>Número</th>
            <th>Nome</th>
            <th>Nome Fantasia</th>
            <th>Data de Cadastro</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Numero.PadLeft(3, '0')</td>
                <td>@item.Nome</td>
                <td>@item.NomeFantasia</td>
                <td>@item.Cadastro</td>
                <td class="text-center">
                    <a class="btn btn-xs btn-default" asp-action="visualizar" asp-route-id="@item.Id">
                        <i class="fa fa-fw fa-search-plus"></i>
                    </a>
                    @if (Html.TemPermissao(FuncionalidadeEnum.Fornecedor, AcaoEnum.Editar))
                    {
                        <a class="btn btn-xs btn-default" asp-action="editar" asp-route-id="@item.Id">
                            <i class="fa fa-fw fa-edit"></i>
                        </a>
                    }
                    @if (Html.TemPermissao(FuncionalidadeEnum.Fornecedor, AcaoEnum.Excluir))
                    {
                        <a class="btn btn-xs btn-default" asp-action="excluir" asp-route-id="@item.Id" data-fw-delete-item>
                            <i class="fa fa-fw fa-trash-o"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>